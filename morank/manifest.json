{
    "manifest_version" : 2,
    "name"             : "Morank",
    "description"      : "__MSG_description__",
    "version"          : "1.0.0",
    "author"           : "Gustavo Vargas <xgvargas@gmail.com>",

    "default_locale": "en",

    // "homepage_url" : "http://path/to/homepage",
    // "update_url"     : "http://path/to/updateInfo.xml",

    "icons": {
        "16"  : "icon16.png",
        "48"  : "icon48.png",
        "128" : "icon128.png"
    },

    "permissions": [
        "http://*/",
        "tabs"
    ],

    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_title": "Morank",
        "default_popup": "popup.html"
    }

